# Production Configuration for Healthcare Appointment Booking System

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQL Server Connection Settings
SQL_SERVER=your-sql-server-hostname-or-ip
SQL_DATABASE=AIStagingDB_20250811
SQL_USERNAME=your-database-username
SQL_PASSWORD=your-database-password
SQL_DRIVER=ODBC Driver 18 for SQL Server

# Alternative connection for Windows Authentication (leave username/password empty)
# SQL_SERVER=localhost\SQLEXPRESS
# SQL_DATABASE=AIStagingDB_20250811
# SQL_USERNAME=
# SQL_PASSWORD=

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Flask Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
FLASK_ENV=production
FLASK_DEBUG=False
HOST=0.0.0.0
PORT=5001

# Security Settings (for production deployment)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=/var/log/healthcare-app/app.log

# For development, you can use:
# LOG_FILE=healthcare_app.log
# LOG_LEVEL=DEBUG

# ============================================================================
# HEALTHCARE SYSTEM CONFIGURATION
# ============================================================================

# Session Management
MAX_SESSION_AGE=3600
MAX_SESSIONS=1000

# Rate Limiting
MAX_MESSAGE_LENGTH=1000
MAX_QUERY_LENGTH=500

# Default appointment duration (minutes)
DEFAULT_APPOINTMENT_DURATION=60

# ============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# ============================================================================

# OpenAI API Key (for enhanced natural language processing)
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (for appointment confirmations)
SMTP_SERVER=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@yourorg.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=True

# SMS Configuration (for appointment reminders)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# MONITORING AND ANALYTICS
# ============================================================================

# Analytics Configuration
ENABLE_ANALYTICS=True
ANALYTICS_RETENTION_DAYS=90

# Health Check Configuration
HEALTH_CHECK_INTERVAL=300

# ============================================================================
# DEPLOYMENT SPECIFIC SETTINGS
# ============================================================================

# Load Balancer Configuration
TRUST_PROXY_HEADERS=True

# SSL/TLS Configuration (for HTTPS deployment)
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/Disable Features
ENABLE_NATURAL_LANGUAGE_QUERIES=True
ENABLE_APPOINTMENT_BOOKING=True
ENABLE_ADMIN_DASHBOARD=True
ENABLE_PATIENT_PORTAL=False
ENABLE_PROVIDER_PORTAL=False

# ============================================================================
# COMPLIANCE AND SECURITY
# ============================================================================

# HIPAA Compliance Settings
ENABLE_AUDIT_LOGGING=True
AUDIT_LOG_PATH=/var/log/healthcare-app/audit.log
ENCRYPT_PATIENT_DATA=True

# Password Policy (for user accounts if implemented)
MIN_PASSWORD_LENGTH=12
REQUIRE_PASSWORD_COMPLEXITY=True
PASSWORD_EXPIRY_DAYS=90

# ============================================================================
# BACKUP AND MAINTENANCE
# ============================================================================

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Maintenance Window
MAINTENANCE_START_HOUR=2
MAINTENANCE_END_HOUR=4
MAINTENANCE_TIMEZONE=UTC
